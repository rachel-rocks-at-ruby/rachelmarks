<h1>My Rachelmarks</h1>


<div class="row">
  <div class="col-md-8">
      <% @bookmarks_by_topics.each do |topic, bookmarks| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to topic, "/topics/"+topic %>
                 <div class="row">
                <div class="col-md-8">
              <% bookmarks.each do |bookmark| %>
                <%= link_to bookmark.address, bookmark.address %>
                <% if bookmark.user_id != current_user.id %>
                DISLIKE
                  <%#= link_to "Dislike bookmark", like_path({like: { user_id: current_user.id, bookmark_id: bookmark.id, id: like.id }}), method: :delete, class: 'btn btn-danger', data: { confirm: 'This bookmark will be removed from your Rachelmarks.' } %>
                <% else %>
                  <%= link_to "Remove bookmark", bookmark, method: :delete, class: 'btn btn-danger', data: { confirm: 'This bookmark will be removed from Rachelmarks.' } %>
                <% end %>
              <% end %>
          </div>
       </div>
    <% end %>
  </div>
</div>