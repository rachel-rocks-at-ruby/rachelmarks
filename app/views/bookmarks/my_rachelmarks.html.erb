<h1>My Rachelmarks</h1>


<div class="row">
  <div class="col-md-8">
      <% @bookmarks_by_topics.each do |topic, bookmarks| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to topic, "/topics/"+topic %>
                 <div class="row">
                <div class="col-md-8">
              <% bookmarks.each do |bookmark| %>
                <%= link_to bookmark.address, bookmark.address %>

              <% end %>
        </div>
        </div>
        <% end %>
  </div>
</div>